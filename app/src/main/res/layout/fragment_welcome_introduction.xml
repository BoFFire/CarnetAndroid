<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_500"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"

        android:layout_marginBottom="30dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:gravity="center"
        android:textSize="40dp" />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_below="@+id/textView"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/discover_tv"
        android:layout_height="wrap_content"
        android:text="@string/welcome_subtitle"
        />
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/versatile_tv"
        android:alpha="0"
        android:layout_below="@+id/discover_tv"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/carnet_note_taking_app"
        />
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/open_tv"
        android:alpha="0"
        android:layout_below="@+id/versatile_tv"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/carnet_open"
        />
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/open_tv"
        android:alpha="0"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/doesnt_spy_tv"
        android:text="@string/carnet_doesnt_spy"
        />

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="@android:color/white"
        android:background="@null"
        android:onClick="next"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
